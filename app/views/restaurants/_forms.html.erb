<%= simple_form_for(@restaurant) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
	<%= f.input :name %>
	<%= f.input :description %>
	<%= f.input :rating %>
	<%= f.input :address %>
	<%= f.input :price %>
	<%= f.input :category %>
    <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
</div>
<br>

<div class="form-actions">

</div>
<br>
<div class="form-actions">
	<%= f.button :submit %>
</div>
<% end %>